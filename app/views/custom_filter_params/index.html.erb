<%= grid(@projects_grid) do |g|

  g.column :column_name => 'Project Name', :attribute_name => 'name'  do |project|
    link_to(project.name, 
            tasks_path(
              wice_grid_custom_filter_params(
                :grid_name => 'grid', 
                :attribute_name => 'project_id',
                :value => project.id  )))
  end

end -%>