# Get it:
git clone git://github.com/leikind/wice_grid_examples.git

cd wice_grid_examples

# Install dependencies:
bundle

# Edit your database.yml
# Create database wice_grid_examples_development

rake db:create

# migrate the DB:
rake db:migrate

# populate the DB:
rake wg:populate

# install assets for the version with Prototype:
rails g   wice_grid:wice_grid_assets_prototype
# or for jQuery:
rails g   wice_grid:wice_grid_assets_jquery

# run it:
rails s

# OR: go to http://grid.leikind.org to view the examples online
